<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.solution.engineering.docket_ereceipt">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".docket_ereceipt"
        android:allowBackup="true"
        android:icon="@mipmap/d_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateVisible|adjustResize">
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ResetPasswordActivity" />
        <activity
            android:name=".DashboardActivity"
            android:label="Dashboard" />
        <activity
            android:name=".qrScanActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_qr_scan"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".SplashActivity" />
        <activity android:name=".HelperActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:label="@string/title_activity_category"
            android:theme="@style/AppTheme" />
        <activity android:name=".DataSaveActivity" />
        <activity android:name=".ProfileSettingsActivity" />
        <activity
            android:name=".ExpensesActivity"
            android:label="Expenses" />
        <activity
            android:name=".EditProfileActivity"
            android:label="Edit Profile"/>
    </application>

</manifest>