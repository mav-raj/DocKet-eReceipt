<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/receiptCard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#F0F0F0">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/receiptStoreName"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:textSize="18sp"

            android:text="Store Name"/>

        <RelativeLayout
            android:id="@+id/dateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/receiptStoreName">

            <TextView
                android:id="@+id/receiptDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Date :" />

            <TextView
                android:id="@+id/receiptTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="textEnd"
                android:layout_toEndOf="@id/receiptDate"
                android:text="Time :" />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/receiptBillNo"
            android:layout_below="@id/dateTime"
            android:layout_margin="5dp"
            android:text="Bill No :"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/receiptPhone"
            android:layout_below="@id/receiptBillNo"
            android:layout_margin="5dp"
            android:text="Phone No :"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/receiptPaymentMode"
            android:layout_below="@id/receiptPhone"
            android:layout_margin="5dp"
            android:text="Payment Mode :"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/receiptTotal"
            android:layout_margin="5dp"
            android:layout_below="@id/receiptPaymentMode"
            android:text="Total :"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>